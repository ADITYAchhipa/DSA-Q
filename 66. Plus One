class Solution {
    public int[] plusOne(int[] digits) {
        int i=digits.length-1;
        while(i>=0&&digits[i]==9){
            digits[i]=0;
            i--;
        }
        if(i<0){
            int arr[]=new int[digits.length+1];
            arr[0]=1;
            for(int ii=1;ii<arr.length;ii++){
                arr[ii]=0;
            }
            digits=arr;
        }
        else{
            digits[i]++;
        }
        return digits;
    }
}
