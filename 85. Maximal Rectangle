//    Difficulty : Hard


//    Problem

//    Given a rows x cols binary matrix filled with 0's and 1's, find the largest rectangle containing only 1's and return its area.



//    Approach (Maximal Rectangle in Binary Matrix)

//    Treat each row as the base of a histogram.
//    Build hist[j] = number of continuous '1's above (including current row) in column j.
//    If matrix[i][j] == '1' → hist[j]++
//    Else → hist[j] = 0
//    For every row, compute the largest rectangle area in the histogram using a monotonic increasing stack.
//    When a smaller height appears, pop heights and calculate area using:
//    height * width
//    Track the maximum area across all rows.
//    Final answer = maximum rectangle area found.




//    Solution

class Solution {
    public int maximalRectangle(char[][] matrix) {
        int m = matrix.length, n = matrix[0].length, ans = 0;
        int[]hist = new int[n];

        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(i == 0){
                    if(matrix[i][j] == '1')hist[j] = 1;
                    else hist[j] = 0;
                }
                else{
                    if(matrix[i][j]!='0')hist[j]+=1;
                    else hist[j] = 0;
                }
            }
            int area = area(hist);
            ans = Math.max(ans, area);
        }

        return ans;
       
    }

    public static int area(int[] heights) {
        int n = heights.length;
        int maxArea = 0;
        Stack<Integer> stack = new Stack<>();

        for (int i = 0; i <= n; i++) {
            int h = (i == n) ? 0 : heights[i];
            while (!stack.isEmpty() && h < heights[stack.peek()]) {
                int height = heights[stack.pop()];
                int width = stack.isEmpty() ? i : i - stack.peek() - 1;
                maxArea = Math.max(maxArea, height * width);
            }
            stack.push(i);
        }

        return maxArea;
    }
}
